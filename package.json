    "@types/chrome": "^0.0.322",
    "@uiw/codemirror-theme-vscode": "^4.23.12",
    "codemirror": "^6.0.1",
    "react": "^19.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.1.0",
    "vaul": "^1.1.2",
    "zustand": "^5.0.4"
