{
  "manifest_version": 3,
  "name": "Portal Design Customizer",
  "version": "1.0",
  "description": "Customize portal design with AI-generated CSS based on natural language prompts",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://*.googleapis.com/*",
    "https://*.devrev-eng.ai/*",
    "https://*.devrev.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "html2canvas.min.js",
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "libraries/monaco-editor/*",
        "libraries/monaco-editor/min/vs/*",
        "libraries/monaco-editor/min/vs/editor/*",
        "libraries/monaco-editor/min/vs/language/css/*",
        "libraries/monaco-editor/min/vs/base/worker/*",
        "libraries/codemirror/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
